apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: seldon-gitops-{{ loop_namespace }}
  namespace: argocd
spec:
  project: seldon
  destination:
    namespace: {{ loop_namespace }}
    server: https://kubernetes.default.svc
  source:
    repoURL: {{ gitops_repository }}
    path: {{ loop_namespace }}
    directory:
      recurse: true
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
